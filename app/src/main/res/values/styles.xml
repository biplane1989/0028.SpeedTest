<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:itemBackground">@color/backgroundPopup</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:divider">#abbbbb</item>
        <item name="background">@drawable/popupmenu_background</item>
        <item name="android:dividerHeight">0.5dp</item>
    </style>

    <declare-styleable name="LineCharView">

        <attr name="lv_ratiogap" format="integer" />
        <attr name="lv_ratioSmoothLine" format="integer" />
        <attr name="lv_densityscreen" format="integer" />
        <attr name="lv_color_line_upload" format="color" />
        <attr name="lv_color_line_download" format="color" />

    </declare-styleable>

    <style name="editTextTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/colorLineDownload</item>
        <item name="colorControlHighlight">@color/colorLineDownload</item>
    </style>
    <style name="FullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

</resources>