<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:id="@+id/ct_item"
    android:background="@color/colorBackgroundItemNetwork">


    <TextView
        android:id="@+id/name_network_providers_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_roboto_bold"
        android:gravity="center"
        android:paddingLeft="@dimen/d_16"
        android:paddingTop="10dp"
        android:text="FPT Telecom"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:ignore="MissingConstraints" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_roboto_regular"
        android:gravity="center"
        android:paddingLeft="@dimen/d_16"
        android:id="@+id/location_network_item_tv"
        android:text="HaNoi"
        android:textColor="@color/colorGrayText"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_network_providers_item_tv"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/iv_choose"
        android:layout_width="?actionBarSize"
        android:layout_height="?actionBarSize"
        android:scaleType="centerInside"
        android:src="@drawable/iv_more_itemnetwork"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:background="@color/colorBackground"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="0.5dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>