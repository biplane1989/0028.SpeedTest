<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lock_notification_main_screen_ignore_list_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#363950"
    app:cardCornerRadius="6dp"
    app:cardElevation="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:fontFamily="@font/font_roboto_regular"
            android:gravity="center"
            android:text="Test with this server"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toTopOf="@id/line"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            app:layout_constraintStart_toStartOf="@id/test"
            app:layout_constraintEnd_toEndOf="@id/test"
            android:id="@+id/line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="#232532"
            app:layout_constraintBottom_toTopOf="@id/favorite"
            app:layout_constraintTop_toBottomOf="@id/test" />

        <TextView
            app:layout_constraintStart_toStartOf="@id/test"
            app:layout_constraintEnd_toEndOf="@id/test"
            android:id="@+id/favorite"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:fontFamily="@font/font_roboto_regular"
            android:gravity="center"
            android:text="Favorite this server"
            android:textColor="@color/white"
            android:textSize="14dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>